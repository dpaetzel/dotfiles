# -*- mode: muttrc -*-


  set postponed = "+$my_account/$my_account_drafts"
  set trash     = "+$my_account/$my_account_trash"


  set sendmail  = "/run/current-system/sw/bin/msmtp -a $my_account"


macro index gi "<change-folder>+$my_account/$my_account_inbox<enter>" "change to inbox"
macro index gs "<change-folder>+$my_account/$my_account_sent<enter>" "change to sent mail"
macro index gt "<change-folder>+$my_account/$my_account_trash<enter>" "change to trash"
